# Docker Environment Configuration for IP Address
# Copy this to .env when deploying with Docker

APP_NAME="Social Feed"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://203.8.25.9

# Docker Database Configuration (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=social_feed
DB_USERNAME=social_feed_user
DB_PASSWORD=change_this_secure_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Shopify
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Instagram/Facebook
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# Laravel
LOG_CHANNEL=stack
LOG_LEVEL=info

# SSL Configuration
# Using self-signed certificate for IP address
# Browser will show security warning - this is normal for self-signed certs
